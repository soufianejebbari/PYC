<%= form_tag cruises_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a cruise"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<div class="create justify-content-center">
  <%= link_to new_cruise_path do%>
  <p class="create btn btn-home btn-success"> <span>+&nbsp;</span><span id="span-color">add a new cruise</span></p>
  <% end %>
</div>

<h2 class="container my-3 px-4"> Offers </h2>

<div class="container d-flex">
  <div class="cards col-6">
    <% @cruises.each do |cruise| %>
    <%= link_to cruise_path(cruise) do %>
      <div class="card-trip">
        <%= image_tag "home.jpeg", alt: "CRUISE_img" %>
        <div class="card-trip-infos">
          <div>
            <h2><%= cruise.name%></h2>
            <p> <%= cruise.boat.category %> trip in <%= cruise.start_location_id %></p>
          </div>
          <div class="card-trip-pricing"><%= cruise.price %>&nbsp;$</div>
           <%= image_tag "https://thispersondoesnotexist.com/image", class: "card-trip-user avatar-bordered"%>
        </div>
      </div>
      <%end%>
    <% end %>
  </div>

  <div class="col-6" id="map"
     style="width: 100%; height: 610px; border-radius: 5px; position: sticky; top: 80px"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
