<div class="container d-flex">
  <div class="cards col-6">
    <% @cruises.each do |cruise| %>
    <%= link_to cruise_path(cruise) do %>
      <div class="card-trip">
        <%= image_tag "home.jpg", alt: "CRUISE_img" %>
        <div class="card-trip-infos">
          <div>
            <h2><%= cruise.name%></h2>
            <p> <%= cruise.boat.category %> trip in <%= cruise.start_location.name %></p>
          </div>
          <div class="card-trip-pricing"><%= cruise.price %>&nbsp;$</div>
           <%= image_tag "https://thispersondoesnotexist.com/image", class: "card-trip-user avatar-bordered"%>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>

  <div class="col-6" id="map"
     style="width: 100%; height: 610px; border-radius: 5px; position: sticky; top: 130px"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

