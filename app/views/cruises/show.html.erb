    <div class="container">
      <div class="col-8">

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="https://source.unsplash.com/1600x900/?sailingboat" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="https://source.unsplash.com/1600x900/?boat" alt="Second slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

        <div class="tag d-flex align-items-center justify-content-between">
          <h1><%= @cruise.name %></h1>
          <%= link_to user_path(@cruise.boat.user), id: "before-avatar" do %>
            <%= image_tag "https://thispersondoesnotexist.com/image", class: "card-trip-user avatar-bordered"%>
          <% end %>
        </div>

        <h3>Board the <%= @cruise.boat.name %></h3>


        <p><%= @cruise.description %></p>

        <div class="col-12" id="map"
           style="width: 100%; height: 610px; border-radius: 5px"
           data-markers="<%= @markers.to_json %>"
           data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
           data-route = "<%= @cruise.stops.map{ |stop| [stop.location.longitude, stop.location.latitude] } %>"
        ></div>

        <%= link_to "< Back", cruises_path, class: "btn btn-flat btn-back btn-success" %>
      </div>
    </div>

    <div class="card-book">
      <div class="form-wrapper">
        <h3>Hey Sailor ! </h3>
        Are you ready to board <br> with <%= @cruise.boat.user.email %> <br>from <div class="green-txt"><%= @cruise.start_date %></div> to <div class="green-txt"><%= @cruise.end_date %></div><br>for <%= @cruise.price %> â‚¬
        <br>Availibility : <%= @booking_capacity %>
        <% unless @booking_capacity == 0 %>
          <%= simple_form_for [@cruise, @booking] do |f| %>
            <%= f.button :button, "Board now", class: "btn btn-flat btn-book btn-success" %>
          <% end %>
        <% end %>
      </div>
    </div>
