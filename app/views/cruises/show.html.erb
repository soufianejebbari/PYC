    <div class="container">
      <div class="col-8">

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <div class="seed"><%= cl_image_tag @cruise.boat.photo, alt: "SURFBOARD"%></div>
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="https://source.unsplash.com/1600x900/?sailingboat" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="https://source.unsplash.com/1600x900/?boat" alt="Second slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

        <div class="tag d-flex align-items-center justify-content-between">
          <h1><%= @cruise.name %></h1>
          <div id="before-avatar">
            <%= cl_image_tag @cruise.boat.user.photo.key, class: "card-trip-user avatar-bordered", id: "before-avatar"%>
          </div>
        </div>

        <h3>Board the <%= @cruise.boat.name %></h3>


        <p><%= @cruise.description %></p>

        <div class="col-12" id="map"
           style="width: 100%; height: 610px; border-radius: 5px"
           data-markers="<%= @markers.to_json %>"
           data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
           data-route = "<%= @cruise.stops.map{ |stop| [stop.location.longitude, stop.location.latitude] } %>"
        ></div>

        <%= link_to "< Back", cruises_path, class: "btn btn-flat btn-back btn-success" %>
      </div>
    </div>

    <div class="card-book">
      <div class="form-wrapper">
        <h3>Hey Sailor, </h3>
        Are you ready to board with <strong><%= @cruise.boat.user.first_name %></strong> <br>from <div class="green-txt"><%= @cruise.start_date %></div> to <div class="green-txt"><%= @cruise.end_date %></div> ?
        <% unless @booking_capacity == 0 %>
          <%= simple_form_for [@cruise, @booking] do |f| %>
            <div class="mt-3">
              <%= f.input :seats, input_html: { min: 1, max: @booking_capacity, step: 1 }, hint: ("#{@booking_capacity} seats available")%>
            </div>
            <div>
              <%= f.button :button, "Board now for #{@cruise.price.to_i*@booking[:seats]} $", class: "btn btn-flat btn-book btn-success" %>
              <% p console %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>


<!-- Button trigger modal -->
<button type="button" class="btn btn-book btn-success" data-toggle="modal" data-target="#bookingFormModal">
  Launch Booking Modal
</button>

<!-- Modal -->
<div class="modal fade" id="bookingFormModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= simple_form_for [@cruise, @booking] do |f| %>
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Booking Modal</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= f.input :seats  %>
        </div>
        <div class="modal-footer">
          <%= f.button :button, "Board now", class: "btn btn-flat btn-book btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
