<div class="container-2">
  <%= simple_form_for(@cruise) do |f| %>
    <!-- <label for="boats"> </label> -->
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :start_location, collection: Location.all %>
    <%= f.input :end_location, collection: Location.all %>
    <%= f.input :difficulty %>
    <%= f.input :boat_id, collection: current_user.boats %>
    <%= f.submit %>
  <% end %>
</div>

<div class="modal-body" style="padding: 120px 220px">
    <%= simple_form_for @cruise do |f| %>

    <div class="d-flex">
      <div class="col-6 pl-0">
        <%= f.input :name , placeholder: 'ex : Nice Cruise in Corsica', label:false %>
        <%= f.input :description , placeholder: 'Description', label:false, as: :text, :input_html => {:style => 'width: 100%', :rows => 5}%>
        <%= f.input :boat_id, prompt: 'Pick one of your boats', label:false, collection: current_user.boats %>
        <div class="d-flex ">
          <%= f.input :start_date, label: 'From', placeholder: '2021-06-13', as: :string, required: false, input_html: {class: "datepicker mr-5", style: 'width: 100%'} %>
          <%= f.input :end_date, label: 'to', placeholder: '2021-07-11', mode: "range", as: :string, required: false, input_html: {class: "datepicker", style: 'width: 100%'} %>
        </div>
        <%= f.input :price, placeholder: '120 $', input_html: { min: 0, max: 10000, step: 10 }, label: 'Price'%>

        </div>
    </div>
    <input type="submit" name="commit" value="I'm done" class="mt-3 btn btn-flat btn-create btn-success" data-disable-with="Create Boat">

    <% end %>
</div>
