<div class="modal-body" style="padding: 110px 230px">
    <h1 class="green-txt">Create a cruise</h1>
    <%= simple_form_for @cruise do |f| %>

    <div class="d-flex mt-3">
      <div class="col-6 pl-0">
        <%= f.input :name , placeholder: 'ex : Nice Cruise in Corsica', label:false %>
        <%= f.input :description , placeholder: 'Description', label:false, as: :text, :input_html => {:style => 'width: 100%', :rows => 5}%>
        <%= f.input :difficulty, as: :range, input_html: { min: '1', step: '1', max: '5' } %>

        <div class="sailing-level">
          <span>Novice</span>
          <span>Easy</span>
          <span>Intermediate</span>
          <span>Hard</span>
          <span>Expert</span>
        </div>

        <%= f.input :boat_id, prompt: 'Pick one of your boats', label:false, collection: current_user.boats %>

        <div class="d-flex ">
          <%= f.input :start_date, label: 'From', placeholder: '2021-06-13', as: :string, required: false, input_html: {class: "datepicker mr-5", style: 'width: 100%'} %>
          <%= f.input :end_date, label: 'to', placeholder: '2021-07-11', mode: "range", as: :string, required: false, input_html: {class: "datepicker", style: 'width: 100%'} %>
        </div>

        <%= f.input :price, placeholder: '120 $', input_html: { min: 0, max: 10000, step: 10 }, label: 'Price'%>
      </div>

      <div class="col-6" >
      <div style="height:80%; background-color:#90caa0; border:#90caa0 1px solid; border-radius: 5px; padding: 30px; position: relative;">
        <div class="d-flex">
          <%= image_tag "marker_dark.png", style: "height:35px; padding-right:10px" %>
          <%= f.input :start_location, prompt: 'Departure', label:false, collection: Location.all %>
        </div>
        <div class="d-flex">
          <%= image_tag "marker_dark.png", style: "height:35px; padding-right:10px" %>
          <%= f.input :end_location, prompt: 'Arrival', label:false, collection: Location.all %>
        </div>
        <button name="button" type="button" class="btn btn-flat" style="background-color: #fdf9f6; width: 86%; position: absolute; bottom: 30px">
          Add a stop
        </button>
      </div>
      <input type="submit" name="commit" value="Post this cruise" class="mt-3 btn btn-flat btn-create btn-success" data-disable-with="Posting cruise">
      </div>

    </div>

    <% end %>
</div>
