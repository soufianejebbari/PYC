<div style="<%= 'background: transparent' if params[:action] == 'home'%>" class="navbar navbar-expand-sm navbar-lewagon">
  <div style="<%= 'opacity: 0' if params[:action] == 'home' %>">
    <%= link_to root_path do %>
      <%= image_tag "logo_black.png", class: "logo-navbar"%>
    <% end %>
  </div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>

        <li class="nav-item dropdown">
          <%= image_tag "menu.png", class: "menu dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <%= link_to "Book a cruise", cruises_path, class: "dropdown-item" %>
            <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
          </div>
        </li>

        <li class="nav-item active">
          <div>
            <%= link_to user_path(current_user) do%>
              <%= image_tag "https://thispersondoesnotexist.com/image", class: "avatar" %>
            <% end %>
          </div>
        </li>

      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
