<div style="<%= 'background: transparent; position: absolute' if params[:action] == 'home'%>" class="navbar navbar-expand-sm navbar-lewagon">
  <div style="<%= 'opacity: 0' if params[:action] == 'home' %>">
    <%= link_to root_path do %>
      <%= image_tag "logo_black.png", class: "logo-navbar"%>
    <% end %>
  </div>

  <% if params[:action] == 'index' %>
    <%= simple_form_for :search, url: cruises_path(:anchor => "offers"), method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="button" class="btn btn-flat" id="filter-btn">
          <p class="filter"> <span><i class="fas fa-plus"></i></span><span id="span-color">Add filters</span></p>
        </button>
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i>
        </button>
      </div>
    <% end %>
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>

        <li class="nav-item dropdown">
          <%= image_tag "menu.png", class: "menu dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to "Book a cruise", cruises_path, class: "dropdown-item border-right" %>
            <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item border-left" %>
          </div>
        </li>

        <li class="nav-item active">
          <div>
            <%= link_to user_path(current_user) do%>
              <%= image_tag "https://thispersondoesnotexist.com/image", class: "avatar" %>
            <% end %>
          </div>
        </li>

      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
